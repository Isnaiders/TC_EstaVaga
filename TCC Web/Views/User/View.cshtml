@using TCC_Web.Models.DTOs.User;

@{
	ViewData["Title"] = "Visualização do Estacionamento";
}

@model UserDetailedDTO

@{
	var pageShortTitle = Model.Name;
	//var pageFullTitle = string.Format("{0}: {1}", Model.CustomerInfo.DisplayName, pageShortTitle);
	var pageFullTitle = string.Format("{0}: {1}", "Usuário", pageShortTitle);

	ViewBag.Title = pageFullTitle;
}

<div class="wrapper wrapper-content animated fadeInUp">
	<div class="ibox">
		<a class="collapse-link">
			<div class="ibox-title">
				<h5>@pageFullTitle</h5>
				<div class="ibox-tools">
					<div type="button" class="btn btn-default btn-circle btn-outline btn-xs"><i class="fa fa-chevron-up"></i></div>
				</div>
			</div>
		</a>
		<div class="ibox-content">
			<div class="row">
				<div class="col-md-12">
					<div class="form-group">
						<label>Nome:</label>
						@Model.Name
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<label>Email:</label>
						@Model.Email
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<label>Data de Aniversário:</label>
						@Model.BirthDate.ToString()
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

