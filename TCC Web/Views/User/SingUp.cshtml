@using TCC_Web.Models.DTOs.User;

@model UserDetailedDTO
@{
    Layout = "_LogedOutLayout";
    ViewData["Title"] = "Cadastrar-se";
}

<div class="wrapper wrapper-content animated fadeInUp">
	<form  method="post">
		<div class="ibox">
			<a class="collapse-link">
				<div class="ibox-title">
					<h5>@ViewData["Title"]</h5>
					<div class="ibox-tools">
						<div type="button" class="btn btn-default btn-circle btn-outline btn-xs"><i class="fa fa-chevron-up"></i></div>
					</div>
				</div>
			</a>
			<div class="ibox-content">
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<label>Nome *</label>
							@Html.TextBoxFor(m => m.Name, new { Class = "form-control", Placeholder = "Nome" })
							@Html.ValidationMessageFor(m => m.Name, "", new { Class = "text-danger" })
						</div>
					</div>
					<div class="col-md-12">
						<div class="form-group">
							<label>Email *</label>
							@Html.TextBoxFor(m => m.Email, new { Class = "form-control", Placeholder = "Email" })
							@Html.ValidationMessageFor(m => m.Email, "", new { Class = "text-danger" })
						</div>
					</div>
					<div class="col-md-12">
						<div class="form-group">
							<label>Data de Nascimento *</label>
							@Html.TextBoxFor(m => m.BirthDate, new { Class = "form-control", Placeholder = "Data de Nascimento", type = "date" })
							@Html.ValidationMessageFor(m => m.BirthDate, "", new { Class = "text-danger" })
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Senha *</label>
							@Html.TextBoxFor(m => m.Password, new { Class = "form-control", Placeholder = "Senha", type = "password" })
							@Html.ValidationMessageFor(m => m.Password, "", new { Class = "text-danger" })
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="ibox" style="margin-top: 10px">
			<div class="row">
				<div class="col-sm-12">
					<div class="pull-right">
						<button class="btn btn-sm btn-primary m-t-n-xs" type="submit" id="saveButton"><strong>Registrar</strong></button>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

@section scripts {
	<script>
		$(document).ready(function () {
			if ('@TempData["ErrorMessage"]' != undefined && '@TempData["ErrorMessage"]' != '' && '@TempData["ErrorMessage"]' != null) {
				Swal.fire({
					icon: 'error',
					title: 'Oops...',
					text: '@TempData["ErrorMessage"]',
				});
			}
		});
	</script>
}